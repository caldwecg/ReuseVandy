<!DOCTYPE html>
<%- include('../partials/header') %>

<body>
    <section class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="content">
                        <h1 class="page-name">Browse Listings</h1>
                        <ol class="breadcrumb">
                            <li><a href="/home">Home</a></li>
                            <li><a href="/buy">Buy</a></li>
                            <li class="active">Search Results</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="products section">
        <div class="container">
            <div class="col-md-12">
                <div class="row">
                    <% posts.forEach(function (post) { %>
                    <div class="col-md-4">
                        <div class="product-item">

                            <div class="card product-thumb">
                                <span class="bage">$<%=post.price%></span>
                                <img class="card-img-bottom img-responsive" src="uploads/<%=post.img%>" height="150px"
                                     width="150px">
                                <div class="preview-meta hover-buy">
                                    <ul>
                                        <li>
                                            <h4 class="card-text" style="color:white">Contact seller:</h4>
                                        </li><br>
                                        <li>
                                            <h4 class="card-text" style="color:white">
                                                <%=post.phone%></h4>
                                        </li>
                                        <li>
                                            <h5 class="card-text" style="color:white"><%=post.email%></h5>
                                        </li>
                                    </ul>
                                </div>
                                <div class="product-content" style="background-color: #0c0c0c">
                                    <h3 style="color:white" class=""><%=post.title%></h3>
                                    <i style="color:white" class="fas fa-search"><%=post.desc%></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                    <% if (posts.length === 0) { %>
                        <div class="alert alert-danger alert-common" role="alert" id="notVandyEmail"><i
                                    class="tf-ion-close-circled"></i><span>Oops!</span> No results match your search</div>
                    <% }%>
                    <form action="/buy" method="GET">
                        <a href="/buy" class="btn btn-main-top btn-round-full btn-large">Take me back to Buy page</a>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <%- include('../partials/footer') %>

    <!--
  Essential Scripts
  =====================================-->

    <!-- Main jQuery -->
    <script src="plugins/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.1 -->
    <script src="plugins/bootstrap/js/bootstrap.min.js"></script>
    <!-- Bootstrap Touchpin -->
    <script src="plugins/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.min.js"></script>
    <!-- Instagram Feed Js -->
    <script src="plugins/instafeed/instafeed.min.js"></script>
    <!-- Video Lightbox Plugin -->
    <script src="plugins/ekko-lightbox/dist/ekko-lightbox.min.js"></script>
    <!-- Count Down Js -->
    <script src="plugins/syo-timer/build/jquery.syotimer.min.js"></script>

    <!-- slick Carousel -->
    <script src="plugins/slick/slick.min.js"></script>
    <script src="plugins/slick/slick-animation.min.js"></script>

    <!-- Google Mapl -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCC72vZw-6tGqFyRhhg5CkF2fqfILn2Tsw"></script>
    <script type="text/javascript" src="plugins/google-map/gmap.js"></script>

    <!-- Main Js File -->
    <script src="js/script.js"></script>

</body>

</html>
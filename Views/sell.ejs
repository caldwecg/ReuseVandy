<!DOCTYPE html>
<html lang = "en">
<%- include('../partials/header') %>
<body id="body">
<section class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="content">
                    <h1 class="page-name">Create a Listing</h1>
                    <ol class="breadcrumb">
                        <li><a href="/home">Home</a></li>
                        <li class="active">Sell</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="page-wrapper">
    <div class="contact-section">
        <div class="container">
            <div class="row">
                <!-- Contact Form -->
                <form  method="POST" action="/sell" enctype="multipart/form-data">
                <div class="contact-form col-md-6 ">
                    
                    
                        <div class="form-group">
                            <input type="text" placeholder="Listing Name" class="form-control" name="title" id="name" required>
                        </div>
                        
                        <div class="form-group">
                            <textarea rows="6" placeholder="Description" class="form-control" name="description" id="description" required></textarea>   
                        </div>
                        
                        <div class="form-group">
                            <input type="text" placeholder="Asking Price" class="form-control" name="price" id="price" required>
                        </div>
                                        
                </div>
                <!-- ./End Contact Form -->
                
                <!-- Contact Details -->
                <div class="contact-details col-md-6 ">
                    <div class="form-group">
                        <input type="text" placeholder="Phone Number" class="form-control" name="phone" id="phone">
                    </div>
                    <div>
                        <h4 class="widget-title">Condition</h4>
                            <select class="form-control">
                                <option>New</option>
                                <option>Like New</option>
                                <option>Slightly Used</option>
                                <option>Used</option>
                                <option>Worn</option>
                            </select>
                    </div>
                    Image  
                    <div>
                        <input type="file" id="image" name="image" value="" required>
                    </div>
                </div>

                
                

                <div class="container">
                    <div class="row">
                        <div class="contact-form col-md-6 ">
                            <button href="#!" class="btn btn-main btn-medium btn-round-full" type="submit">Submit</button>
                        </div>
                    </div>
                </div>
            </form>


                <!-- / End Contact Details -->
                    
                
            
            </div> <!-- end row -->
        </div> <!-- end container -->
        
    </div>
</section>

